<!-- FILE: views/manage-classes.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Manage Classes - GSOB Transit</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">

    <h2>Promotion: <%= promotion %></h2>
    <p>Select a <%= ['S1','S2','S3'].includes(promotion) ? 'Class' : 'Combination/Stream' %>:</p>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% items.forEach(item => { %>
        <div class="col">
          <div class="card shadow-sm text-center h-100">
            <div class="card-body d-flex flex-column justify-content-center">
              <h5 class="card-title"><%= item || 'â€”' %></h5>
              <a href="/admin/manage/<%= promotion %>/<%= item %>" class="btn btn-primary mt-3">
                View Students
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="mt-4">
      <a href="/admin/summary" class="btn btn-secondary">Back to Summary</a>
    </div>
  </div>
</body>
</html>
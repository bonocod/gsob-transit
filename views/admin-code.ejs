<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Access - GSOB Transit</title>
<script src="https://cdn.tailwindcss.com"></script>
<script>
tailwind.config = {
theme: {
extend: {
colors: { primary: '#2563EB', gold: '#FFD700' }
}
}
}
</script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center min-h-screen">
<div class="max-w-md w-full bg-white p-6 sm:p-8 rounded-lg shadow-lg">
<h2 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 mb-6">Admin Access</h2>
<i class="fas fa-shield-alt text-4xl text-primary text-center block mb-4"></i>
<% if (errorMessage) { %>
<div role="alert" class="bg-red-100 text-red-800 px-4 py-3 mb-6 rounded-lg border border-red-300">
<%= errorMessage %>
</div>
<% } %>
<form action="/auth/admin-code" method="POST" class="space-y-6" aria-label="Admin Code Form">
<input type="hidden" name="_csrf" value="<%= csrfToken %>">
<div>
<label for="adminCode" class="block text-sm font-medium text-gray-700">Admin Code</label>
<input type="text" name="adminCode" id="adminCode" required maxlength="10"
class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary text-base"
aria-required="true" placeholder="Enter special admin code">
</div>
<button type="submit" class="w-full bg-primary text-white py-3 rounded-lg hover:bg-blue-700 transition-colors duration-200 text-lg font-semibold">Access Dashboard</button>
</form>
<p class="mt-4 text-center text-sm text-gray-600">
<a href="/" class="text-primary hover:underline font-medium">Back to Home</a>
</p>
</div>
</body>
</html>
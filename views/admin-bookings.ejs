<!DOCTYPE html>
<html>
<head>
  <title>Admin Bookings - GSOB Transit</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto mt-5 px-4">
    <h2 class="text-2xl font-bold mb-4">Manage Bookings</h2>
    <table class="table-auto w-full border-collapse bg-white shadow-md rounded-lg">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="px-4 py-2">User</th>
          <th class="px-4 py-2">Destination</th>
          <th class="px-4 py-2">Phone</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(booking => { %>
          <tr class="border-b">
            <td class="px-4 py-2"><%= booking.user.name %></td>
            <td class="px-4 py-2"><%= booking.destination %></td>
            <td class="px-4 py-2"><%= booking.phone %></td>
            <td class="px-4 py-2"><%= booking.status %></td>
            <td class="px-4 py-2">
              <% if (booking.status !== 'paid') { %>
                <form action="/admin/bookings/<%= booking._id %>/paid" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition">Mark as Paid</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/admin/summary" class="inline-block mt-4 bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition">Back to Summary</a>
  </div>
</body>
</html>
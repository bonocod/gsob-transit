    <!-- Footer -->
    <footer class="py-12 px-4 bg-gray-900/50">
        <div class="max-w-6xl mx-auto text-center">
            <h3 class="text-2xl font-bold mb-4 glow" id="footerTitle">GSOB Transit</h3>

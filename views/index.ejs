<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Tailwind CSS Play CDN (no build step) -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#2563EB', /* custom brand color (blue-600) */
          }
        }
      }
    }
  </script>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
  <title>GSOB Transit - Home</title>
</head>
<body class="bg-gray-100 text-gray-900">
  <!-- Navigation Bar -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <a href="/" class="text-xl font-bold text-primary">GSOB Transit</a>
        <nav aria-label="Main navigation">
          <ul class="flex items-center space-x-4">
            <% if (user) { %>
              <li><a href="/booking" class="text-gray-800 hover:text-primary transition-colors">Book a Trip</a></li>
              <li>
                <form action="/auth/logout" method="POST" class="inline">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="text-gray-800 hover:text-primary transition-colors">Logout</button>
                </form>
              </li>
            <% } else { %>
              <li><a href="/auth/login" class="text-gray-800 hover:text-primary transition-colors">Login</a></li>
              <li><a href="/auth/register" class="text-gray-800 hover:text-primary transition-colors">Register</a></li>
            <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <main>
    <section class="bg-gray-100 py-16">
      <div class="max-w-3xl mx-auto text-center px-4">
        <h1 class="text-4xl font-extrabold text-gray-900 mb-4">Welcome to GSOB Transit</h1>
        <p class="text-lg text-gray-700 mb-6">Manage and book your travel plans quickly and easily.</p>
        <div class="space-x-4">
          <% if (user) { %>
            <a href="/booking" class="inline-block bg-primary text-white px-6 py-3 rounded-md hover:bg-blue-700 transition-colors duration-200">Book a Trip</a>
          <% } else { %>
            <a href="/auth/register" class="inline-block bg-primary text-white px-6 py-3 rounded-md hover:bg-blue-700 transition-colors duration-200">Get Started</a>
            <a href="/auth/login" class="inline-block border border-primary text-primary px-6 py-3 rounded-md hover:bg-primary hover:text-white transition-colors duration-200">Login</a>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-16">
      <div class="max-w-5xl mx-auto px-4 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
          <div class="mb-4">
            <i class="fas fa-search fa-2x text-primary"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Find Trips</h3>
          <p class="text-gray-600">Search for available routes and schedules to plan your trip.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
          <div class="mb-4">
            <i class="fas fa-ticket-alt fa-2x text-primary"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Book Seats</h3>
          <p class="text-gray-600">Select your preferred seats and complete your booking in seconds.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
          <div class="mb-4">
            <i class="fas fa-bus fa-2x text-primary"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Enjoy the Ride</h3>
          <p class="text-gray-600">Track your booking and enjoy a comfortable journey with us.</p>
        </div>
      </div>
    </section>
  </main>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Admin Summary - GSOB Transit</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto mt-5 px-4">
    <h2 class="text-2xl font-bold mb-4">Booking Summary by Promotion & Destination</h2>
    <table class="table-auto w-full border-collapse bg-white shadow-md rounded-lg mt-4">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="px-4 py-2">#</th>
          <th class="px-4 py-2">Promotion</th>
          <th class="px-4 py-2">Destination</th>
          <th class="px-4 py-2">Students</th>
          <th class="px-4 py-2">Total Paid (RWF)</th>
        </tr>
      </thead>
      <tbody>
        <% destinationSummary.forEach((it, i) => { %>
          <tr class="<%= it.promotion === 'All' ? 'bg-blue-100' : '' %>">
            <td class="px-4 py-2"><%= i + 1 %></td>
            <td class="px-4 py-2"><%= it.promotion %></td>
            <td class="px-4 py-2"><%= it.destination || 'â€”' %></td>
            <td class="px-4 py-2"><%= it.numberOfStudents %></td>
            <td class="px-4 py-2"><%= it.totalPaid.toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/admin/export/summary" class="inline-block mt-3 bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition">Export Summary to CSV</a>
    <h2 class="text-2xl font-bold mt-5">Manage Students by Promotion</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
      <% ['S1', 'S2', 'S3', 'S4', 'S5', 'S6'].forEach(promo => { %>
        <div class="bg-white shadow-md rounded-lg text-center p-4">
          <h5 class="text-lg font-semibold">Promotion <%= promo %></h5>
          <a href="/admin/manage/<%= promo %>" class="inline-block mt-3 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">Manage</a>
        </div>
      <% }) %>
    </div>
    <a href="/admin/bookings" class="inline-block mt-3 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">Manage Bookings</a>
    <a href="/logout" class="inline-block mt-3 bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition">Logout</a>
  </div>
</body>
</html>